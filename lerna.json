{
  "version": "independent",
  "packages": [
    "base-package/*",
    "packages/*",
    "pages/*"
  ],
  "command": {
    "version": {
      "exact": true,
      "conventionalCommits": true,
      "message": "chore(release): %s [skip ci]",
      "changelogPreset": "@pragmatics/preset"
    },
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.sh"
      ]
    }
  }
}
